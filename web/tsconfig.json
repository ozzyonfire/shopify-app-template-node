{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "incremental": true,
  },
  "exclude": [
    "node_modules",
    "frontend",
    "**/*.spec.ts",
    "dist",
    "backend"
  ]
}